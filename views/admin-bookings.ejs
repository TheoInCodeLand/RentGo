<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Bookings</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            font-weight: bold;
            color: #212529;
        }

        /* Navbar */
        .navbar {
            padding: 0.8rem 1rem;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-dark .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-dark .navbar-nav .nav-link {
            font-size: 1rem;
            margin-right: 1rem;
            font-weight: 500;
        }

        /* Table */
        .table-responsive {
            margin: 20px auto;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .table {
            background-color: #ffffff;
            margin-bottom: 0;
        }

        .table thead {
            background-color: #343a40;
            color: #ffffff;
        }

        .table th, .table td {
            text-align: left;
            padding: 12px;
            font-size: small;
            text-transform: capitalize;
            vertical-align: middle;
        }

        /* Buttons */
        button {
            font-size: 0.9rem;
            padding: 8px 12px;
            border-radius: 4px;
            border: none;
            transition: all 0.2s;
        }

        button:hover {
            opacity: 0.9;
        }

        .approve-btn {
            background-color: #28a745;
            color: #ffffff;
        }

        .decline-btn {
            background-color: #dc3545;
            color: #ffffff;
        }

        .status {
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 4px;
            text-transform: capitalize;
        }

        .status.pending {
            background-color: #ffc107;
            color: #ffffff;
        }

        .status.approved {
            background-color: #28a745;
            color: #ffffff;
        }

        .status.declined {
            background-color: #dc3545;
            color: #ffffff;
        }

        /* Media Queries */
        @media (max-width: 768px) {
            .navbar {
                text-align: center;
            }

            .table th, .table td {
                font-size: 0.9rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin: <%=user.name%></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Manage Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/cars">Manage Cars</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container">
        <h1>Manage Bookings</h1>

        <!-- Bookings Table -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Booking ID</th>
                        <th>Car</th>
                        <th>#customer</th>
                        <th>customer names</th>
                        <th>Email</th>
                        <th>Start Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (bookings.length > 0) { %>
                        <% bookings.forEach(function(booking) { %>
                            <tr>
                                <td><%= booking.id %></td>
                                <td><%= booking.car_brand %> <%= booking.car_name %></td>
                                <td><%= booking.customer_id%></td>
                                <td><%= booking.customer_name %> <%= booking.customer_surname %></</td>
                                <td><%= booking.user_email %></td>
                                <td><%= booking.rental_date %></td>
                                <td><%= booking.return_date %></td>
                                <td>
                                    <span class="status <%= booking.status %>"><%= booking.status %></span>
                                </td>
                                <td>
                                    <% if (booking.status === 'pending') { %>
                                        <form action="/admin/bookings/approve/<%= booking.id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="approve-btn btn btn-sm">Accept</button>
                                        </form>
                                        <form action="/admin/bookings/decline/<%= booking.id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="decline-btn btn btn-sm">Decline</button>
                                        </form>
                                    <% } %>
                                    <% if (booking.returned_status === 'pending') { %>
                                        <form action="/admin/bookings/return/<%= booking.id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-primary">Mark as Returned</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center">No bookings found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
